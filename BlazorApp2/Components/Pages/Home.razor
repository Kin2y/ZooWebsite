@page "/"

<PageTitle>Home</PageTitle>


@using BlazorApp2.Components
@using BlazorApp2.Utilities
@inject UserSession UserSession
@inject NavigationManager NavigationManager


@rendermode InteractiveServer

<PageTitle>Home</PageTitle>
<h1>Hello, world</h1>
<button class="cool-button" @onclick="ShowDialog">Open Dialog</button>

<Dialog Title="Hello World!" Opened="dialogShown" CloseButtonClicked="@(() => dialogShown = false)">
    <BodyContent>
        <p style="font-size: 13px;">
        </p>
    </BodyContent>
</Dialog>


@if (UserSession.UserId == 0)
{
    <h1>Log In</h1>
}
else
{
    <h1>your userid is @UserSession.UserId</h1>
    <button onclick=@Modify>Modify your account</button>
}

@code {
    private bool dialogShown = false;

    private void ShowDialog()
    {
        dialogShown = true;
    }
    private void Modify()
    {
        NavigationManager.NavigateTo("/modify");
    }
}
